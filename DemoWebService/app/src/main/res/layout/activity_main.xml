<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
            android:text="@string/user_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etUsuario" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="@string/etName"/>
    <Button
            android:text="@string/pesquisar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btPesquisar" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/etUsuario" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="123dp"
            android:layout_height="146dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/ivUsuario" android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/btPesquisar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="@string/etName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUsuario" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/ivUsuario" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="@+id/ivUsuario"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/ivUsuario"
            android:textSize="28sp" android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>